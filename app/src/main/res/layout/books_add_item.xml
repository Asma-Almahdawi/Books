<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200sp"
    android:layout_height="200sp"

    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bookImageTv"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundSquer"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/bookNamesTv"
        android:layout_width="0dp"
        android:layout_height="40sp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/bookImageTv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bookImageTv"
        app:layout_constraintTop_toBottomOf="@+id/bookImageTv" />

</androidx.constraintlayout.widget.ConstraintLayout>